{  
  "compilerOptions": {  
    "esModuleInterop": true,  
    "target": "es6",  
    "module": "commonjs",  
    "strict": true,  
    "newLine": "lf",  
    "outDir": "./lib",  
    "rootDir": "./src",  
    "forceConsistentCasingInFileNames": true,  
    "noImplicitAny": false,  
    "resolveJsonModule": true,  
    "useUnknownInCatchVariables": false,  
    "types": [  
      "node",  
      "jest",  
      "yargs",  
      "yargs-parser",
    ],  
    "skipLibCheck": true,  
    "moduleResolution": "node",  
    "baseUrl": ".",  
    "paths": {  
      "*": ["node_modules/*", "src/types/*"]  
    },  
    "allowJs": true,  
    "experimentalDecorators": true,  
    "emitDecoratorMetadata": true,  
    "typeRoots": [  
      "./node_modules/@types",  
      "./src/types"  
    ]  
  },  
  "exclude": [  
    "./__tests__/**/*",  
    "./lib/**/*",  
    "node_modules",  
    "jest.config.ts"  
  ],  
  "include": [  
    "src/**/*",  
    "__tests__/**/*"  
  ],  
  "ts-node": {  
    "transpileOnly": true,  
    "files": true  
  }  
}