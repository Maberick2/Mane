{
  "name": "docker-login",
  "description": "GitHub Action to login against a Docker registry",
  "main": "src/main.ts",
  "type": "module",
  "engines": {
    "node": ">=20.0.0"
  },
  "packageManager": "yarn@4.0.2",
  "scripts": {
    "build": "ncc build --source-map --minify --license licenses.txt",
    "lint": "yarn prettier && yarn eslint",
    "format": "yarn prettier:fix && yarn eslint:fix",
    "eslint": "eslint --max-warnings=0 .",
    "eslint:fix": "eslint --fix .",
    "prettier": "prettier --check \"./**/*.ts\"",
    "prettier:fix": "prettier --write \"./**/*.ts\"",
    "test": "jest",
    "test:integration": "jest --config=jest.config.ts \"__tests__/integration/**/*.test.ts\" --runInBand --detectOpenHandles --forceExit --verbose",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "security-test": "jest \"__tests__/integration/auth-security.tests.ts\"",
    "security-test:watch": "jest \"__tests__/integration/auth-security.tests.ts\" --watch",
    "test:ci": "jest --ci --coverage --reporters='default' --reporters='jest-junit'",
    "test:system": "jest --config=jest.config.ts --testMatch \"**/__tests__/integration/system.test.ts\"",
    "test:all": "yarn test && yarn test:system",
    "metrics": "yarn test:coverage && node scripts/generate-metrics.js",
    "security:audit": "(yarn audit || true) && (snyk test || true)",
    "security:scan": "zap-cli quick-scan --self-contained",
    "complexity": "eslint \"src/**/*.ts\" --config .eslintrc.complexity.json",
    "validate": "yarn lint && yarn test:coverage && yarn security:audit",
    "monitor": "snyk monitor",
    "analyze": "eslint . --format html -o reports/lint-report.html",
    "test-and-report": "jest --coverage --reporters=default --reporters=jest-junit && node scripts/generate-report.mjs",
    "generate-report": "node scripts/generate-report.mjs",
    "pretest": "yarn lint",
    "test:full": "yarn test:all && yarn security-test && yarn metrics",
    "report:full": "yarn test:full && yarn report",
    "ci": "yarn test:full && yarn report && yarn complexity",
    "prepare": "husky install"
  },
  "jest": {
    "coverageDirectory": "coverage",
    "coverageReporters": ["json-summary", "text", "lcov", "html"],
    "reporters": [
      "default",
      ["jest-junit", {
        "outputDirectory": "reports",
        "outputName": "junit.xml",
        "ancestorSeparator": " â€º ",
        "uniqueOutputName": "false",
        "suiteNameTemplate": "{filepath}",
        "classNameTemplate": "{classname}",
        "titleTemplate": "{title}"
      }]
    ]
  },
  "dependencies": {
    "@actions/core": "^1.11.1",
    "@aws-sdk/client-ecr": "^3.664.0",
    "@aws-sdk/client-ecr-public": "^3.664.0",
    "@docker/actions-toolkit": "^0.42.0",
    "http-proxy-agent": "^7.0.2",
    "https-proxy-agent": "^7.0.5"
  },
  "devDependencies": {
    "@jest/globals": "^29.7.0",
    "@types/jest": "^29.5.14",
    "@types/node": "^20.12.12",
    "@typescript-eslint/eslint-plugin": "^7.9.0",
    "@typescript-eslint/parser": "^7.9.0",
    "@vercel/ncc": "^0.38.1",
    "@xmldom/xmldom": "^0.8.10",
    "dotenv": "^16.4.5",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-jest": "^28.5.0",
    "eslint-plugin-prettier": "^5.1.3",
    "eslint-plugin-complexity": "^1.0.0",
    "eslint-plugin-security": "^1.7.1",
    "eslint-plugin-sonarjs": "^0.23.0",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "jest-environment-node": "^29.7.0",
    "jest-junit": "^16.0.0",
    "prettier": "^3.2.5",
    "snyk": "^1.1130.0",
    "testcontainers": "^10.15.0",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3",
    "jsdom": "^23.0.1"
  }
}